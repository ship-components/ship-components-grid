{
  "name": "ship-components-grid",
  "version": "0.2.4",
  "description": "React Masonry Component",
  "main": "src/Grid.js",
  "scripts": {
    "start": "grunt server",
    "build": "grunt build",
    "lint": "./node_modules/eslint/bin/eslint.js src/*.jsx",
    "test": "grunt lint && ./node_modules/jest-cli/bin/jest.js --coverage",
    "coverage": "cat ./coverage/lcov.info | ./node_modules/coveralls/bin/coveralls.js -v"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ship-components/ship-components-grid.git"
  },
  "keywords": [
    "react",
    "masonry"
  ],
  "author": "",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/ship-components/ship-components-grid/issues"
  },
  "homepage": "https://github.com/ship-components/ship-components-grid#readme",
  "contributors": [
    {
      "name": "Isaac Suttell",
      "email": "isaac.suttell@sony.com"
    },
    {
      "name": "Chris Orescan",
      "email": "chris.orescan@sony.com"
    },
    {
      "name": "Sepand Assadi",
      "email": "sepand.assadi@sony.com"
    }
  ],
  "devDependencies": {
    "babel-core": "^6.13.2",
    "babel-eslint": "^6.1.2",
    "babel-jest": "^14.1.0",
    "babel-loader": "^6.2.5",
    "babel-preset-es2015": "^6.13.2",
    "babel-preset-react": "^6.11.1",
    "classnames": "^2.2.5",
    "coveralls": "^2.11.12",
    "eslint": "^3.3.1",
    "eslint-loader": "^1.5.0",
    "eslint-plugin-react": "^6.1.2",
    "grunt": "^1.0.1",
    "grunt-cli": "^1.2.0",
    "grunt-contrib-clean": "^1.0.0",
    "grunt-eslint": "^19.0.0",
    "grunt-webpack": "^1.0.14",
    "imagesloaded": "^4.1.0",
    "jest": "^19.0.2",
    "jest-cli": "^19.0.2",
    "jest-css-modules": "^1.1.0",
    "masonry-layout": "^4.1.1",
    "react": "^15.3.1",
    "react-addons-test-utils": "^15.3.1",
    "react-dom": "^15.3.1",
    "webpack": "^1.13.2",
    "webpack-dev-server": "^1.15.0"
  },
  "jest": {
    "transform": {
      "^.+\\.jsx?$": "babel-jest"
    },
    "moduleNameMapper": {
      "\\.(css)$": "<rootDir>/node_modules/jest-css-modules"
    },
    "unmockedModulePathPatterns": [
      "<rootDir>/node_modules/classnames",
      "<rootDir>/node_modules/react",
      "<rootDir>/node_modules/fbjs",
      "<rootDir>/node_modules/react-dom",
      "<rootDir>/node_modules/react-addons-test-utils"
    ]
  },
  "babelJest": {
    "include": [
      "src/**/*.@(js|jsx|es6)"
    ]
  }
}
